# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-me-in-production-use-a-random-string

# Initial admin password (only used on first launch to create the admin account)
ADMIN_PASSWORD=admin

# WebAuthn settings
# RP_ID should be your NAS hostname (no port, no protocol)
# RP_ORIGIN should be the full URL you access the app from
#
# For Synology NAS with HTTPS reverse proxy:
#   RP_ID=nas.yourdomain.com
#   RP_ORIGIN=https://nas.yourdomain.com
#
# For local development:
#   RP_ID=localhost
#   RP_ORIGIN=http://localhost:5000
RP_ID=localhost
RP_NAME=R2K Quant Strategy
RP_ORIGIN=http://localhost:5000
